{{title "Personeelsdatabank " bestuurseenheid.classificatie.label " " bestuurseenheid.naam}}

<div class="container-flex--contain">
	<div class="u-border--light--bottom">
	  <div class="u-padding--trl--small">
	    <h1 class="h4 u-spacer--tiny">Personeelsbeheer Gemeente Gent {{!-- {{bestuurseenheid.classificatie.label}} {{bestuurseenheid.naam}} --}}</h1>
	    <div class="grid">
	      <div class="col--6-12 col--1-1--s">
	        <p class="text-light">Overzicht aantallen</p>
	      </div>
	      <div class="col--6-12 col--1-1--s u-align-right--tablet-portrait-up">
	      </div>
	    </div>
			<div class="alert alert--tiny alert--warning u-spacer--top--tiny">
			  <div class="alert__icon" aria-hidden="true"></div>
			  <div class="alert__content">
			    <div class="alert__title">Actie vereist</div>
			    <div class="alert__message">
			      <p>Gelieve de aantallen die niet actueel zijn voor dit jaar aan te passen.</p>
			    </div>
			  </div>
			</div>
	  </div>
	</div>
	<div class="container-flex--scroll u-padding--round">

	  <div class="u-spacer">
	    <div class="u-padding--tb--small u-border--light--bottom">
	      <div class="grid">
	        <div class="col--8-12 col--1-1--m">
	          <h2 class="h5 u-spacer--tiny">Aantal Voltijds Equivalenten &mdash; VTE</h2>
	          <ul class="inline-list inline-list--bordered small">
	            <li>
				       		0 VTE's
			        </li>
	            <li>
				       		0 Deeltijds
			        </li>
	            <li>
				       		0 Voltijds
				      </li>
	          </ul>
	        </div>
	        <div class="col--4-12 col--1-1--m u-align-right--tablet-portrait-up">
	        	{{#link-to "personeelsdatabank.voltijdsequivalenten" class="button button--small button--narrow u-spacer--tiny"}}<i class="vi vi-arrow button__icon">&nbsp;</i>Bekijk en bewerk details{{/link-to}}
	        	<p class="text-fade smaller">
		        	<span>Laatst aangepast op 31.12.2018 </span>
			        <label class="pill pill--primary-yellow">Aantallen niet actueel</label>
			      </p>
		      </div>
	      </div>
	    </div>
	  </div>

	  <div class="u-spacer">
	    <div class="u-padding--tb--small u-border--light--bottom">
	      <div class="grid">
	        <div class="col--6-12 col--1-1--m">
	          <h2 class="h5 u-spacer--tiny">Aantal werknemers &mdash; koppen</h2>
	          <ul class="inline-list inline-list--bordered small">
	            <li>
				       		0 koppen
			        </li>
	            <li>
				       		0 Deeltijds
			        </li>
	            <li>
