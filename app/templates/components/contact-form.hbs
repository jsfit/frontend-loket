<form class="u-spacer--large js-formvalidation-bound">
  <div class="form__row">
    <label class="form__label form__label--large form__label--block" for="select">Waar gaat uw bericht over?</label>
    {{wu-radio-button label="Een vraag of probleem over de applicatie" value="LoketLokaalBestuur@vlaanderen.be?subject=Vraag of probleem - Loket Lokaal Bestuur" onChange=(action (mut mailto)) isBlock=true}}
    {{wu-radio-button label="Toezicht" value="LoketLokaalBestuur@vlaanderen.be?subject=Toezicht - Loket Lokaal Bestuur" onChange=(action (mut mailto)) isBlock=true}}
    {{wu-radio-button label="BBC-DR" value="LoketLokaalBestuur@vlaanderen.be?subject=BBC-DR - Loket Lokaal Bestuur" onChange=(action (mut mailto)) isBlock=true}}
    {{wu-radio-button label="Mandatenbeheer" value="LoketLokaalBestuur@vlaanderen.be?subject=Mandatenbeheer - Loket Lokaal Bestuur" onChange=(action (mut mailto)) isBlock=true}}
    {{wu-radio-button label="Leidinggevendenbeheer" value="LoketLokaalBestuur@vlaanderen.be?subject=Leidinggevendenbeheer - Loket Lokaal Bestuur" onChange=(action (mut mailto)) isBlock=true}}
    <div class="form__error" aria-describedby="radio-buttons"></div>
  </div>

  {{#if mailto}}
    <a href={{concat "mailto:" mailto}} class="button button--large">Stel bericht op</a>
  {{else}}
    {{wu-button label="Stel bericht op" onClick=null size="large" disabled=true}}
  {{/if}}
</form>
